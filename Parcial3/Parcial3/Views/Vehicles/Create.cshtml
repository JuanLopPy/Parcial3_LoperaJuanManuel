@model Parcial3.DAL.Entities.Vehicle

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Registro</h1>

<h4>Vehiculo</h4>
<
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
            </div>
            <div class="form-group">
                <select class="form-control" name="ServiceId">
                    <option value="Lavada Simple">Lavada Simple</option>
                    <option value="Lavada + Polishada">Lavada + Polishada</option>
                    <option value="Lavada + Aspirada de Cojinería">Lavada + Aspirada de Cojinería</option>
                    <option value="Lavada Full">Lavada Full</option>
                    <option value="Lavada en seco del Motor">Lavada en seco del Motor</option>
                    <option value="Lavada Chasis">Lavada Chasis</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Owner" class="control-label"></label>
                <input asp-for="Owner" class="form-control" />
                <span asp-validation-for="Owner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberPlate" class="control-label"></label>
                <input asp-for="NumberPlate" class="form-control" />
                <span asp-validation-for="NumberPlate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Crear</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
